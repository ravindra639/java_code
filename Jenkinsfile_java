pipeline {
	parameters {
			text(name: 'REPO', defaultValue: 'welcome', description: '')
			string(name: 'BUILD', defaultValue: '', description: '')
			boolean(name: 'FAILED', defaultValue: true, description: '')
		}
    agent any 
    stages {
        stage('Build') { 
            steps {
                bat '''
				build.bat
				'''
            }
        }
		stage('Deploy') { 
            steps {
                bat '''
				echo Deploy Stage
				mvn clean install
				'''
            }
        }
		stage('Tomcat Deploy') { 
            steps {
                bat '''
				echo Tomcat Stage
				'''
            }
        }
		stage('Deploy Artifactory') { 
            steps {
                bat '''
				echo Artifactory Stage
				'''
            }
        }
    }
}
